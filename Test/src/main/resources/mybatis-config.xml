<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost:3306/GYH01?rewriteBatchedStatements=true"/>
                <property name="username" value="root"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="ActorMapper.xml"/>
<!--        <mapper resource="com/yugao/mybatis_proxy_practice/mapper/AdminMapper.xml"/>-->
<!--        Mapper 加载代理 下面代码可以直接加载对应文件夹下面的所有Mapper-->
        <package name="com/yugao/mybatis_proxy_practice/mapper"/>
    </mappers>
</configuration>